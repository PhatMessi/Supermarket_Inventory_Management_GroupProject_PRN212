<Window x:Class="Supermarket_Inventory_Management.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket_Inventory_Management"
        mc:Ignorable="d"
        Title="OutputWindow" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form nhập liệu -->
        <UniformGrid Grid.Row="0" Columns="6" Margin="0,0,0,10">
            <TextBlock Text="Tên vật tư"/>
            <TextBlock Text="Ngày xuất"/>
            <TextBlock Text="Số lượng"/>
            <TextBlock Text="Giá xuất"/>
            <TextBlock Text="Khách hàng"/>
            <TextBlock Text="Trạng thái xuất"/>

            <ComboBox x:Name="cbVatTu" DisplayMemberPath="DisplayName"/>
            <DatePicker x:Name="dpNgayXuat"/>
            <TextBox x:Name="txtSoLuong"/>
            <TextBox x:Name="txtGiaXuat"/>
            <ComboBox x:Name="cbKhachHang" DisplayMemberPath="DisplayName"/>
            <TextBox x:Name="txtTrangThai"/>
        </UniformGrid>

        <!-- Nút -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Thêm" Width="100" Margin="10" Click="AddOut_Click"/>
            <Button Content="Sửa" Width="100" Margin="10" Click="EditOut_Click"/>
            <Button Content="Xóa" Width="107" Margin="10" Click="DeleteOut_Click" Height="32"/>
            <Button Content="Clear" Width="100" Margin="10" Click="Clear_Click" Height="33"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgXuatKho" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,10,0,0"
                  SelectionChanged="dgXuatKho_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vật tư" Binding="{Binding IdObjectNavigation.DisplayName}" Width="*"/>
                <DataGridTextColumn Header="Ngày xuất" Binding="{Binding IdInputInfoNavigation.IdInputNavigation.DateInput}" Width="*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Count}" Width="*"/>
                <DataGridTextColumn Header="Giá xuất" Binding="{Binding IdInputInfoNavigation.OutputPrice}" Width="*"/>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding IdCustomerNavigation.DisplayName}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái xuất" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
