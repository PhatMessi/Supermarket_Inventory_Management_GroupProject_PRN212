<Window x:Class="Supermarket_Inventory_Management.ObjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket_Inventory_Management"
        mc:Ignorable="d"
        Title="ObjectWindow" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form nhập liệu -->
        <UniformGrid Grid.Row="0" Columns="5" Margin="0,0,0,10">
            <TextBlock Text="Tên vật tư"/>
            <TextBlock Text="Đơn vị đo"/>
            <TextBlock Text="Nhà cung cấp"/>
            <TextBlock Text="QR Code"/>
            <TextBlock Text="Bar Code"/>

            <TextBox x:Name="txtTenVatTu" />
            <ComboBox x:Name="cbDonViDo" DisplayMemberPath="DisplayName"/>
            <ComboBox x:Name="cbNhaCungCap" DisplayMemberPath="DisplayName"/>
            <TextBox x:Name="txtQRCode"/>
            <TextBox x:Name="txtBarCode"/>
        </UniformGrid>

        <!-- Nút thao tác -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Thêm" Width="100" Margin="10" Click="AddObj_Click"/>
            <Button Content="Sửa" Width="100" Margin="10" Click="EditObj_Click"/>
            <Button Content="Xóa" Width="101" Margin="10" Click="DeleteOjb_Click" Height="36"/>
            <Button Content="Clear" Width="100" Margin="10" Click="Clear_Click" Height="35"/>
        </StackPanel>

        <!-- Danh sách vật tư -->
        <DataGrid x:Name="dgVatTu" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionChanged="dgVatTu_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="Tên vật tư" Binding="{Binding DisplayName}" Width="*"/>
                <DataGridTextColumn Header="Đơn vị đo" Binding="{Binding IdUnitNavigation.DisplayName}" Width="*"/>
                <DataGridTextColumn Header="Nhà cung cấp" Binding="{Binding IdSuplierNavigation.DisplayName}" Width="*"/>
                <DataGridTextColumn Header="QRCode" Binding="{Binding Qrcode}" Width="*"/>
                <DataGridTextColumn Header="BarCode" Binding="{Binding BarCode}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
