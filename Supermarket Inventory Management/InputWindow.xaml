<Window x:Class="Supermarket_Inventory_Management.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket_Inventory_Management"
        mc:Ignorable="d"
        Title="InputWindow" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form nhập liệu -->
        <UniformGrid Grid.Row="0" Columns="6" Margin="0,0,0,10">
            <TextBlock Text="Tên vật tư"/>
            <TextBlock Text="Ngày nhập"/>
            <TextBlock Text="Số lượng"/>
            <TextBlock Text="Giá nhập"/>
            <TextBlock Text="Giá xuất"/>
            <TextBlock Text="Trạng thái nhập"/>

            <ComboBox x:Name="cbVatTu" DisplayMemberPath="DisplayName"/>
            <DatePicker x:Name="dpNgayNhap"/>
            <TextBox x:Name="txtSoLuong"/>
            <TextBox x:Name="txtGiaNhap"/>
            <TextBox x:Name="txtGiaXuat"/>
            <TextBox x:Name="txtTrangThai"/>
        </UniformGrid>

        <!-- Nút thao tác -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Thêm" Width="100" Margin="10" Click="AddInput_Click" RenderTransformOrigin="-0.033,0.854"/>
            <Button Content="Sửa" Width="100" Margin="10" Click="EditInput_Click"/>
            <Button Content="Xóa" Width="108" Margin="10" Click="DeleteInput_Click" Height="38"/>
            <Button Content="Clear" Width="100" Margin="10" Click="Clear_Click" Height="38"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgNhapKho" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True" CanUserAddRows="False"
                  Margin="0,10,0,0"
                  SelectionChanged="dgNhapKho_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vật tư" Binding="{Binding IdObjectNavigation.DisplayName}" Width="*" />
                <DataGridTextColumn Header="Ngày nhập" Binding="{Binding IdInputNavigation.DateInput}" Width="*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Count}" Width="*"/>
                <DataGridTextColumn Header="Giá nhập" Binding="{Binding InputPrice}" Width="*"/>
                <DataGridTextColumn Header="Giá xuất" Binding="{Binding OutputPrice}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái nhập" Binding="{Binding Status}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
